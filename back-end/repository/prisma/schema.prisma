generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model Customer {
    id              Int     @id @default(autoincrement())
    name            String  
    address         String
    email           String          @unique
    cropPreference  Crop[]

}

model Crop {

        id                      Int     @id @default(autoincrement())
        name                    String  @unique
        purchasePrice           Int
        marketPrice             Int
        totalYield              Int
        attentionRange          Int
        growthDurationInMonths  Int
        Customers               Customer[]

}
 