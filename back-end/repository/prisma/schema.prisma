generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model Customer {
    id              Int     @id @default(autoincrement())
    cropPreference  Crop[]
      role      String
      name      String    @unique
      email     String    @unique
      password  String
      address   String
   


}

model Crop {

        id                      Int     @id @default(autoincrement())
        name                    String  @unique
        purchasePrice           Int
        marketPrice             Int
        totalYield              Int
        attentionRange          Int
        growthDurationInMonths  Int
        Customers               Customer[]
        seedSuppliers           SeedSupplier[]

}
model Farmer {
        id                      Int     @id @default(autoincrement())
        farmingPractice         String
        farmSizeInHectares      Int
         role      String
          name      String    @unique
          email     String    @unique
          password  String
      
}
model SeedSupplier{
    id                          Int     @id @default(autoincrement())
    cropId                      Int
    seedType                    Crop    @relation(fields: [cropId], references: [id])
     role                       String
      name                       String    @unique
  email                          String    @unique
  password                       String
  address                        String
     


}

model Resource {
    name                        String  @unique
    manufacturer                String
    service_duration            Int
    service_start_date          DateTime
}

