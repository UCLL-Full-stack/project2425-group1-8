generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  farmers Farmer[]
  customers Customer[]
  seedSuppliers SeedSupplier[]

}

model Customer {
    id              Int     @id @default(autoincrement())
    name            String 
    password        String 
    address         String
    email           String          @unique
    cropPreference  Crop[]?
    role            Role?    @relation(fields: [roleId], references: [id])
    roleId          Int?


}

model Crop {

        id                      Int     @id @default(autoincrement())
        name                    String  @unique
        purchasePrice           Int
        marketPrice             Int
        totalYield              Int
        attentionRange          Int
        growthDurationInMonths  Int
        Customers               Customer[]
        seedSuppliers           SeedSupplier[]

}
model Farmer {
        id                      Int     @id @default(autoincrement())
        name                    String 
        password                String
 
        email                   String  @unique
        farmingPractice         String
        farmSizeInHectares      Int
        role                    Role    @relation(fields: [roleId], references: [id])
        roleId                  Int

}
model SeedSupplier{
    id                          Int     @id @default(autoincrement())
    name                        String  @unique
    password                    String
    address                     String
    email                       String
    cropId                      Int
    seedType                    Crop    @relation(fields: [cropId], references: [id])
    role                        Role    @relation(fields: [roleId], references: [id])
    roleId                      Int


}

model Resource {
    name                        String  @unique
    manufacturer                String
    service_duration            Int
    service_start_date          DateTime
}

